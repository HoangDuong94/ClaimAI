{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2023"],
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["@cap-js/cds-types", "node"]
  },
  "include": [
    "srv/**/*.ts",
    "srv/**/*.mts",
    "srv/**/*.d.ts"
  ],
  "exclude": [
    "gen",
    "node_modules"
  ]
}
